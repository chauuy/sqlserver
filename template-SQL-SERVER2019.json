{
  "kind": "Template",
  "apiVersion": "template.openshift.io/v1",
  "metadata": {
    "name": "microsoft-sql-server-2019",
    "annotations":
     {
      "openshift.io/display-name": "Microsoft SQL Server (Ephemeral)",
      "openshift.io/provider-display-name": "Microsoft Inc.",
      "openshift.io/support-url": "https://access.redhat.com",
      "description": "Microsoft SQL Server database service, without persistent storage.",
      "iconClass": "icon-mssql",
      "tags": "database,mssql"
     }
  },
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "mssql"
      },
      "spec": {
        "ports": [
          {
            "name": "mssql",
            "protocol": "TCP",
            "port": 1433,
            "targetPort": 1433,
            "nodePort": 0
          }
        ],
        "selector": {
          "name": "mssql"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      },
      "status": {
        "loadBalancer": {}
      }
    },
    {
      "kind": "Route",
      "apiVersion": "route.openshift.io/v1",
      "metadata": {
        "name": "mssql"
      },
      "spec": {
        "to": {
          "kind": "Service",
          "name": "mssql"
        },
        "tls": {
          "termination": "edge"
        }
      }
    },
    {
      "kind": "Deployment",
      "apiVersion": "apps/v1",
      "metadata": {
        "name": "mssql-2019-DC",
      "labels": {
         "app": "mssql-2019",
         "app.kubernetes.io/name": "mssql"
       },
        "annotations": { "template.openshift.io/wait-for-ready": "true"}
      },
      "spec": {
        "strategy": {
          "type": "Recreate"
        },
        "triggers": [],
        "replicas": 1,
        "selector": {
          "name":"mssql-2019"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "mssql-2019"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "sqlserver2019",
                "image": "mcr.microsoft.com/mssql/server:2019-latest",
                "ports": [
                  {
                    "containerPort": 1433,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                   {"name": "MSSQL_PID", "value": "${MSSQL_PID}"},
                   {"name": "SA_PASSWORD", "value": "${SA_PASSWORD}"},
                   {"name": "ACCEPT_EULA", "value": "Y"},
                   {"name": "MSSQL_MEMORY_LIMIT_MB", "value": "${MSSQL_MEMORY_LIMIT_MB}"}
                ]
              }
            ],
            "restartPolicy": "Always",
            "dnsPolicy": "ClusterFirst"
          }
        }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "mssql"
      },
      "spec": {
        "ports": [
          {
            "name": "mssql",
            "protocol": "TCP",
            "port": 1433,
            "targetPort": 1433,
            "nodePort": 0
          }
        ],
        "selector": {
          "name": "mssql"
        },
        "type": "ClusterIP",
        "sessionAffinity": "None"
      }
    },
    {
      "kind": "ImageStream",
      "apiVersion": "image.openshift.io/v1",
      "metadata": {
        "name": "mssql-2019"
      },
      "spec": {
        "dockerImageRepository": "openshift/mssql-2019:latest"
      }
    }
  ],
  "parameters": [
    {
      "name": "ACCEPT_EULA",
      "displayName": "ACCEPT_EULA (Accept Licence)",
      "description": "Accept End-User Licensing Agreement.",
      "value": "Y"
    },
    {
      "name": "MSSQL_PID",
      "displayName": "MSSQL_PID (SQL Server Edition)",
      "description": "Database Edition= Developer; Express; Standard; Enterprise; EnterpriseCore.",
      "value": "Developer"
    },
    {
      "name": "MSSQL_MEMORY_LIMIT_MB",
      "displayName": "MSSQL_MEMORY_LIMIT_MB (Memory Limit for SQL Server 2GB min)",
      "description": "Maximum amount of memory the database can use.",
      "value": "2Gi"
    },
    {
      "name": "SA_PASSWORD",
      "displayName": "SA_PASSWORD (Database Administrator Username)",
      "description": "Password for the database administrator.",
      "value": "SQLserver2019"
    }
  ],
  "labels": {
    "template": "sqlserver2019-template"
  }
}
